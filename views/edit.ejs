<!DOCTYPE html>
<html lang="en">
<head>
    <script
      src="https://code.jquery.com/jquery-3.5.1.js"
      integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
      crossorigin="anonymous"
    ></script>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://unpkg.com/mvp.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
      body{
          min-width:55rem;
          display: flex;
          flex-direction: column;
          align-items: center;
          margin: 1rem;
          height:100vh;
      }

      #title{
          width:15em;
      }

      main{
          
          padding:1rem;
          margin:0;
      }
      .title{
          justify-content: space-between;
          align-items: center;
          display: flex;
          width:100%;
      }
      textarea,input{
          padding:.6rem 1.5rem;
          font-size: 1rem;
          border:gray 1px solid;
      }
      input,button{
          margin: .5rem 0;
      }
      textarea{
          width:100%;
          resize: none;
          margin: 0;
      }
      button{
          font-size: .9rem;
          padding:.5rem 2rem;
      }
      button:active{
          opacity: .9;
      }
      header{
          padding: 0;
          display: flex;
          justify-content: center;
          align-items: center;
          position:relative;
          min-width:55rem;
      }
    span{
        font-size: .7rem;
        position: absolute;
        right:1rem;
        bottom: 0;
    }
    @media screen and (max-width: 1000px) {
        body {
          font-size: 0.7rem;
        }
      }

    </style>
    
    <script>
        function edit(){
            const url = window.location.href.split("/");
            const id = url[url.length-1];

            let password = $('#id').val();
            if(!password){
                password = prompt('비밀번호를 입력하세요','');
            }else{

                const comment = $('#write').val();
                const title = $('#title').val();
                const writer = $('#id').val();

                $.ajax({
                    type:'PATCH',
                    url:`/edit/${id}`,
                    data:{password,comment,title,writer},
                    success:function(res){
                        const {result,msg=""}=res;
                        if(!result){
                            alert(msg);
                        }else{
                            window.location.href=`/detail/${id}`
                        }
                    }
                })
            }
            
        }
    </script>
</head>
<body>
    <header>
        <h1>글 편집</h1>
        <span>작성일 : <%=date%></span>
    </header>
<main>
    <div class="title">
        <input placeholder="제목" id="title" type="text" value="<%=data['title']%>"></input>
        <input placeholder="닉네임" id="id" type="text" value="<%=data['writer']%>"></input>
        <input placeholder="비밀번호" id="pw" type="password" ></input>
        <button onclick="edit()">수정완료</button>
    </div>
    <textarea id="write" cols="100" rows="50" ><%=data['comment']%></textarea>

</main>
   


</body>
</html>